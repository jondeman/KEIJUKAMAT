# KonseptiKeiju Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS
# =============================================================================

# Google Gemini API Key (for Research Bot & AD Bot prompt building)
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude API Key (for Creative Bot)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Nano Banana Pro API Key (for image generation)
NANOBANANA_API_KEY=your_nanobanana_api_key_here

# Brandfetch API Key (for brand colors)
BRANDFETCH_API_KEY=your_brandfetch_api_key_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP settings for sending delivery emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_NAME=KonseptiKeiju

# SendGrid (recommended for Render free tier, supports Gmail sender verification)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=your_verified_sender@gmail.com

# Resend (recommended for Render free tier)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=verified@yourdomain.com

# Delivery base URL for GitHub Pages (where files are published)
DELIVERY_BASE_URL=https://yourusername.github.io/your-repo/deliveries

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Access code required to use the system (simple auth gate)
ACCESS_CODE=your_secret_access_code

# Base URL for the web interface
BASE_URL=http://localhost:8000

# Local path for GitHub Pages delivery output
DELIVERY_PAGES_DIR=docs/deliveries

# GitHub publish (optional)
GITHUB_TOKEN=your_token
GITHUB_REPO=yourusername/your-repo
GITHUB_BRANCH=main
GIT_USER_NAME=your_name
GIT_USER_EMAIL=you@example.com

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# STORAGE PATHS (optional - defaults to ./archive and ./runs)
# =============================================================================

# ARCHIVE_PATH=/path/to/archive
# RUNS_PATH=/path/to/runs

# =============================================================================
# MODEL SETTINGS (optional - tune API behavior)
# =============================================================================

# Gemini model for research
GEMINI_MODEL=gemini-3-pro-preview

# Gemini model for image generation (one-pagers)
GEMINI_IMAGE_MODEL=gemini-3-pro-image-preview

# Claude model for creative (Opus 4.5)
CLAUDE_MODEL=claude-opus-4-5-20251101

# Maximum retries for API calls
MAX_RETRIES=3

# Timeout for API calls (seconds)
API_TIMEOUT=120

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================

# Set to true to use mock APIs (no API calls, for testing)
USE_MOCK_APIS=false
