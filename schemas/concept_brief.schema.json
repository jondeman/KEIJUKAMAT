{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "concept_brief.schema.json",
  "title": "Concept Brief",
  "description": "Assignment from Producer to Creative Bot for one concept slot",
  "type": "object",
  "required": [
    "slot_id",
    "slot_type",
    "assigned_tension_id",
    "strategic_focus",
    "platform_focus",
    "format_guidance",
    "risk_profile",
    "success_hypothesis"
  ],
  "properties": {
    "slot_id": {
      "type": "string",
      "enum": ["01", "02", "03"]
    },
    "slot_type": {
      "type": "string",
      "enum": ["safe_bet", "challenger", "moonshot"]
    },
    "assigned_tension_id": {
      "type": "string",
      "pattern": "^tension_\\d{2}$"
    },
    "strategic_focus": {
      "type": "string",
      "minLength": 10,
      "description": "One sentence summary of the strategic tension"
    },
    "platform_focus": {
      "type": "string",
      "enum": ["youtube", "tiktok", "instagram", "cross_platform"]
    },
    "format_guidance": {
      "type": "string",
      "minLength": 20,
      "description": "Guidance on format approach for this slot"
    },
    "risk_profile": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "success_hypothesis": {
      "type": "string",
      "minLength": 20,
      "description": "Why a CMO would care about solving this tension"
    }
  }
}
