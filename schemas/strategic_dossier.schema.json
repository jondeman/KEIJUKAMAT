{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "strategic_dossier.schema.json",
  "title": "Strategic Dossier",
  "description": "Output from Research Bot - comprehensive brand analysis",
  "type": "object",
  "required": [
    "company_name",
    "company_slug",
    "brand_identity",
    "strategic_priorities",
    "marketing_posture",
    "competitive_analysis",
    "strategic_tensions",
    "opportunity_zones",
    "sources"
  ],
  "properties": {
    "company_name": {
      "type": "string",
      "minLength": 1
    },
    "company_slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "brand_identity": {
      "type": "object",
      "required": ["positioning", "visual_markers"],
      "properties": {
        "positioning": {
          "type": "string",
          "minLength": 10
        },
        "visual_markers": {
          "type": "object",
          "required": ["primary_color"],
          "properties": {
            "primary_color": {
              "type": "string",
              "minLength": 1
            },
            "secondary_colors": {
              "type": "array",
              "items": { "type": "string" }
            },
            "style_keywords": {
              "type": "array",
              "items": { "type": "string" }
            },
            "tone_keywords": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "voice_characteristics": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "strategic_priorities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["rank", "priority", "execution_assessment"],
        "properties": {
          "rank": {
            "type": "integer",
            "minimum": 1
          },
          "priority": {
            "type": "string",
            "minLength": 5
          },
          "evidence": {
            "type": "array",
            "items": { "type": "string" }
          },
          "execution_assessment": {
            "type": "string",
            "enum": ["strong", "moderate", "weak"]
          }
        }
      }
    },
    "marketing_posture": {
      "type": "object",
      "properties": {
        "current_content_types": {
          "type": "array",
          "items": { "type": "string" }
        },
        "channel_presence": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["active"],
            "properties": {
              "active": { "type": "boolean" },
              "assessment": { "type": "string" }
            }
          }
        },
        "apparent_gaps": {
          "type": "array",
          "items": { "type": "string" }
        },
        "audience_engagement": {
          "type": "string"
        }
      }
    },
    "competitive_analysis": {
      "type": "object",
      "properties": {
        "key_competitors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "content_strategy", "threat_level"],
            "properties": {
              "name": { "type": "string" },
              "content_strategy": { "type": "string" },
              "threat_level": {
                "type": "string",
                "enum": ["high", "medium", "low"]
              }
            }
          }
        },
        "brand_winning_areas": {
          "type": "array",
          "items": { "type": "string" }
        },
        "brand_losing_areas": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "strategic_tensions": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": ["id", "description", "opportunity_type", "priority_score"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^tension_\\d{2}$"
          },
          "description": {
            "type": "string",
            "minLength": 20
          },
          "evidence": {
            "type": "array",
            "items": { "type": "string" }
          },
          "opportunity_type": {
            "type": "string",
            "enum": ["gap", "threat", "aspiration", "underserved_audience"]
          },
          "priority_score": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          }
        }
      }
    },
    "opportunity_zones": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "description", "rationale", "risk_level"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^opp_\\d{2}$"
          },
          "description": {
            "type": "string",
            "minLength": 10
          },
          "rationale": {
            "type": "string"
          },
          "risk_level": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          }
        }
      }
    },
    "sources": {
      "type": "array",
      "minItems": 5,
      "items": {
        "type": "object",
        "required": ["title", "url", "type", "date_accessed"],
        "properties": {
          "title": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "type": {
            "type": "string",
            "enum": ["news", "company_site", "social", "interview", "report", "video", "other"]
          },
          "date_accessed": { "type": "string" },
          "relevance": { "type": "string" }
        }
      }
    }
  }
}
