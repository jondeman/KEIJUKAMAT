{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "run_state.schema.json",
  "title": "Run State",
  "description": "Pipeline execution state for a single run",
  "type": "object",
  "required": [
    "run_id",
    "company_slug",
    "created_at",
    "current_phase"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "pattern": "^\\d{8}_\\d{6}$"
    },
    "company_slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "current_phase": {
      "type": "string",
      "enum": [
        "input",
        "validate",
        "check_archive",
        "research",
        "strategize",
        "create",
        "visualize",
        "compose_pitch",
        "package",
        "deliver",
        "done",
        "error"
      ]
    },
    "user_input": {
      "type": ["object", "null"],
      "properties": {
        "company_name": { "type": "string" },
        "user_email": { "type": "string", "format": "email" },
        "access_code": { "type": "string" },
        "additional_context": { "type": "string" }
      }
    },
    "dossier": {
      "type": ["object", "null"],
      "$ref": "strategic_dossier.schema.json"
    },
    "concept_briefs": {
      "type": "array",
      "items": {
        "$ref": "concept_brief.schema.json"
      }
    },
    "concepts": {
      "type": "array",
      "items": {
        "$ref": "concept.schema.json"
      }
    },
    "treatment_files": {
      "type": "array",
      "items": { "type": "string" }
    },
    "onepager_specs": {
      "type": "array",
      "items": {
        "$ref": "onepager_spec.schema.json"
      }
    },
    "pitch_email": {
      "type": "string"
    },
    "phase_history": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["phase", "started_at"],
        "properties": {
          "phase": {
            "type": "string"
          },
          "started_at": {
            "type": "string",
            "format": "date-time"
          },
          "completed_at": {
            "type": ["string", "null"],
            "format": "date-time"
          },
          "success": {
            "type": "boolean"
          },
          "error_message": {
            "type": ["string", "null"]
          },
          "retry_count": {
            "type": "integer",
            "minimum": 0
          },
          "artifacts": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "archive_ref": {
      "type": ["string", "null"]
    }
  }
}
